page {
  height: 92%;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: #eeeeee;
}

.container{
  height: 100%;
  background-color: #eeeeee;
  padding-top: 20px;
}

.container_card{
  display: block;
  height: 92%;
  width: 72%;
  border-radius: 5%;
  box-shadow: 0px 0px 5px 5px #e7e7e7;
  background-color: #ffffff;
  margin:5px;
  padding: 20px;
}

.top{
  height: 15%;
  width: 100%;

  display: flex;    /*设置显示样式**/
  align-items: center;    /**子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction:column; /*子view排列方式row--水平 column--垂直*/
}

.page_title{
  width: 100%;
  color: #486a00;
  font-size: 45rpx;

  display: flex;    /*设置显示样式**/
  /* align-items: center;    *子view垂直居中 */
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  /* flex-direction:row; 子view排列方式row--水平 column--垂直 */

}

.small_line{
  width: 70rpx;
  height:5rpx;
  background-color:  #486a00;

  display: flex;    /*设置显示样式**/
  /* align-items: center;    *子view垂直居中 */
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  /* flex-direction:row; 子view排列方式row--水平 column--垂直 */
}

.user{
  height: 20%;
  width: 100%;
  display: flex;    /*设置显示样式**/
  /* align-items: center;    *子view垂直居中 */
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction:column; /*子view排列方式row--水平 column--垂直*/

  margin-bottom:10rpx;
}

.avatar_view{
  /* width: 160rpx;
  height: 160rpx;
  margin-top: 40rpx;
  border-radius: 50%; */

  display: flex;    /*设置显示样式**/
  /* align-items: center;    *子view垂直居中 */
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  /* flex-direction:row; 子view排列方式row--水平 column--垂直 */
}

.avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.username{
  width: 100%;
  color: #486a00;
  font-size: 33rpx;

  display: flex;    /*设置显示样式**/
  /* align-items: center;    *子view垂直居中 */
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  /* flex-direction:row; 子view排列方式row--水平 column--垂直 */
  margin-top:25px;
}

.list{
  height:60%;
  width: 100%;
  margin-top:20rpx;
  overflow: scroll;
}

.list_item{
  height:70px;
  width:100%;
  margin-top: 10px;
  display: flex;
  float:left;

  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
}

.small_leaf_part{
  width:10%;
  height:100%;
  display: flex;
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  padding-top:25px;
}

.small_leaf{
  width:20px;
  height:20px;

  display: flex;
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
}

.except_small_leaf_part{
  width:90%;
  height:100%;
  background-color: #e5e5e5;
  border-radius: 4%;
  display: flex;
  float:left;  
}


.list_item:active {
    background-color: #ECECEC;
    /* margin-top: 10px;
    margin-bottom: 10px; */
} 

.list_item_img{
  width:60px;
  height:60px;
  margin: auto;
  border-radius: 15%;
}

.text_container{
  width:70%;
  height:100%;  
  display:flex;
  flex-direction: column;
  padding-top: 10rpx;
}

.list_item_bookTitle{
  color: #1a1a1a;
  font-size: 30rpx;
}

.list_item_bookAbstract{
  color:#7d7d7d;
  font-size: 20rpx;  
}

.list_item_bookTime{
  color:#7d7d7d;
  font-size: 20rpx;  
  margin-left: 20rpx;  
}

.hint {
  width: 300rpx;
  height: 90rpx;
  position: absolute;
  top: 45vh;
  left: 33%; 
  color: #768f40;
}