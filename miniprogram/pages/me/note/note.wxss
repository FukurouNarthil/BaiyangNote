page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: #eeeeee;
}

.container{
  height: 100%;
  background-color: #eeeeee;
  padding-top: 20px;
}

.container_card{
  display: block;
  height: 92%;
  width: 72%;
  border-radius: 5%;
  box-shadow: 0px 0px 5px 5px #e7e7e7;
  background-color: #ffffff;
  margin:5px;
  padding: 20px;
}

.top{
  height: 15%;
  width: 100%;

  display: flex;    /*设置显示样式**/
  align-items: center;    /**子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction:column; /*子view排列方式row--水平 column--垂直*/
}

