@import "./weui.wxss";

page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: #eeeeee;
}

.container{
  height: 100%;
  background-color: #eeeeee;
}

.swiper_contianer{
  padding-top: 60rpx;
  width: 650rpx;
  height: 92%;
  /* margin-left: -30rpx; */
}

.swiper_contianer swiper {
  height: 100%;
}

.swiper-item{
  display: block;
  height: 96%;
  width: 94%;
  border-radius: 5%;
  margin-left: 20rpx;
  margin-top: 6px;
  box-shadow: 0px 0px 10px 5px #e7e7e7;
  background-color: #ffffff;
}
.swiper-item .startButton {
  width: 200rpx;
  height: 70rpx;
  position: absolute;
  left: 33%;
  bottom: 15%;
}

.title{
  height: 60rpx;
  width: 200rpx;
  position: absolute;
  top: 10%;
  left: 25%;
  font-size: 38rpx;
  transform: translate(-50%, -50%);
}

.link {
  height: 30rpx;
  width: 180rpx;
  position: absolute;
  bottom: 8%;
  font-size: 30rpx;
}

.timer{
  position: relative;
  align-items: center;
  justify-content: center;
  color: #486A00;
}
.clock-container {
  width: 500rpx;
  height: 500rpx;
  position: absolute;
  top: 18%;
  left: 5%;
}
.clock-container image {
  height: 100%;
  width: 100%;
}
.clock {
  position: absolute;
  top: 37%;
  left: 16%;
  font-size: 80rpx;
  font-weight: bold;
  color: #324531;
}
.timer .link {
  left: 36%;
}

.shelf{
  height: 96%;
  width: 94%;
  position: relative;
  align-items: center;
  justify-content: center;
  color: #486A00;
}
.shelf .link {
  left: 40%;
}
.books-display {
  width: 500rpx;
  height: 620rpx;
  position: absolute;
  top: 18%;
  left: 5%;
}
.display {
  width: 230rpx;
  height: 290rpx;
  background-color: rgb(255, 224, 184);
  position: absolute;
  color: rgb(187, 113, 3);
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.display text {
  width: 190rpx;
  margin-left: 20rpx;
}