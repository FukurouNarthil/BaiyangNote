@import "./weui.wxss";

page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.container{
  height: 100%;
}

.swiper_contianer{
  padding-top: 60rpx;
  width: 650rpx;
  height: 92%;
  /* margin-left: -30rpx; */
}

.swiper_contianer swiper {
  height: 100%;
}

.swiper-item{
  display: block;
  height: 96%;
  width: 94%;
  border-radius: 5%;
  margin-left: 20rpx;
  margin-top: 6px;
  box-shadow: 0px 0px 10px 5px #e7e7e7;
}
.swiper-item .clock {
  width: 500rpx;
  height: 500rpx;
  position: absolute;
  top: 18%;
  left: 5%;
}
.swiper-item .startButton {
  width: 200rpx;
  height: 70rpx;
  position: absolute;
  left: 33%;
  bottom: 14%;
}

.timer{
  position: relative;
  align-items: center;
  justify-content: center;
  color: #486A00;
  font-size: 38rpx;
}
.timer:before{
  content: '读书打卡';
  position: absolute;
  top: 10%;
  left: 25%;
  transform: translate(-50%, -50%);
}

.shelf{
  position: relative;
  align-items: center;
  justify-content: center;
  color: #486A00;
  font-size: 38rpx;
}
.shelf:before{
  content: '最近阅读';
  position: absolute;
  top: 10%;
  left: 25%;
  transform: translate(-50%, -50%);
}

