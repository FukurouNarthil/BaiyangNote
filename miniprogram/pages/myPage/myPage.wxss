.container {
  width: 100%;
  height: 100vh;
}

.usr_info {
  height: 30vh;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  overflow: hidden;
}

.usr_name {
  color: #757575;
  margin-top: 22rpx;
}

.usr_avatar{
  width: 160rpx;
  height: 160rpx;
  margin-top: 30rpx;
  border-radius: 50%;
}

.usr_sign {
  color: #757575;
  margin-top: 22rpx;
}

.sub_page_containter {
  margin-top: 60rpx;
  height: 640rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.sub_page {
  height: 280rpx;
  width: 100%;
  border-top: #e6e6e6 10rpx solid;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 50rpx;
}

