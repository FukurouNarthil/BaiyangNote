page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: #eeeeee;
}

.container{
  height: 100%;
  background-color: #eeeeee;
  padding-top: 20px;
}

.container_card{
  display: block;
  height: 92%;
  width: 72%;
  border-radius: 5%;
  box-shadow: 0px 0px 5px 5px #e7e7e7;
  background-color: #ffffff;
  margin:5px;
  padding-left: 10px;
  padding-right: 10px;
}

.usr_info {
  height: 40vh;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.usr_name {
  color: #486a00;
  border-bottom: #486A00 1px solid;
  width: 84%;
  height: 120rpx;
  font-size: 50rpx;
  display: flex;
  flex-direction: column-reverse;
  justify-content: end;
  align-items: center;
}

.usr_avatar{
  width: 160rpx;
  height: 160rpx;
  margin-top: 30rpx;
  border-radius: 50%;
}

.usr_sign {
  margin-top: 22rpx;
  width: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #768f40;
}

.usr_sign text {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis; 
  overflow: hidden; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.sub_page_containter {
  height: 480rpx;
  width: 40%;
  margin-left: 160rpx;
  margin-right: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.sub_page {
  height: 280rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.sub_page .button {
  width: 190rpx;
  height: 65rpx;
}

.login {
  width: 100%;
  height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #768f40;
  font-size: 28rpx;
}
.login_button{
  width: 210rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
  color: #768f40;
}