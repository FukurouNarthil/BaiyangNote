/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}


.gridview-item:active {
    background-color: #ECECEC;
    /* margin-top: 10px;
    margin-bottom: 10px; */
}  
.gridview-item_img {
    position: relative;
    float: left;
    /* padding: 20rpx; */
    width: 100%;
    height:300rpx;
    box-sizing: border-box;
    display:flex;
    align-items: center;
    justify-content: center;
    margin-bottom:10px;
    /* background:#80CBC4; */
}
.gridview-item_text{
    width:60px;
    height:30rpx;
    display:flex;
    align-items:center;
    justify-content:center;
    font-size:15px;
    color:#486A00;
    margin-left:25px;
}
