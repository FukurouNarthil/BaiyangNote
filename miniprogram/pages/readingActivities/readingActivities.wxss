  margin:5px;
  padding-left: 10px;
  padding-right: 10px;
}

.title_row{
  height:20px;
  width:100%;
  margin-top:20px;
  margin-bottom:20px;
  margin-left:10px; 
}

.title{
  color: #486A00;
  font-size: 45rpx;
}

