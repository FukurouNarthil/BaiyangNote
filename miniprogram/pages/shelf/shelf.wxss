/* pages/shelf/shelf.wxss */
page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: #eeeeee;
}

.container {
  height: 100%;
  background-color: #eeeeee;
  padding-top: 20px;
}

.container-card {
  display: block;
  height: 92%;
  width: 72%;
  border-radius: 5%;
  box-shadow: 0px 0px 5px 5px #e7e7e7;
  background-color: #ffffff;
  color: #486a00;
  margin: 5px;
  padding-left: 10px;
  padding-right: 10px;
  position: relative;
  align-items: center;
  justify-content: center;
}

.title {
  height: 60rpx;
  width: 200rpx;
  position: absolute;
  top: 10%;
  left: 8%;
  font-size: 38rpx;
}

.display {
  width: 530rpx;
  height: 70%;
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  top: 18%;
  left: 5%;
}

.books_row {
  width: 520rpx;
  height: 32%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.book {
  width: 168rpx;
  height: 100%;
  background-color: rgb(255, 224, 184);
  /* position: absolute; */
  color: rgb(187, 113, 3);
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 25rpx;
}
.cover {
  width: 168rpx;
  height: 85%;
  background-color: brown;
}
.book_title {

  font-size: 25rpx;
}

.more {
  height: 10%;
  width: 200rpx;
  position: absolute;
  bottom: 0%;
  left: 38%;
  font-size: 25rpx;
}