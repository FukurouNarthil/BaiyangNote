/* pages/shelf/shelf.wxss */
page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  background-color: #eeeeee;
}

.container {
  height: 100%;
  background-color: #eeeeee;
  padding-top: 20px;
}

.container-card {
  display: flex;
  height: 92%;
  width: 72%;
  border-radius: 5%;
  box-shadow: 0px 0px 5px 5px #e7e7e7;
  background-color: #ffffff;
  color: #486a00;
  margin: 5px;
  padding-left: 10px;
  padding-right: 10px;
  position: relative;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  height: 60rpx;
  width: 160rpx;
  font-size: 38rpx;
  font-weight: bold;
  border-bottom: #486A00 2px solid;
  display: flex;
  justify-content: center;
  align-items: center;
}

.usr_info {
  height: 70vh;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.current_usr_name {
  color: #486a00;
  width: 100%;
  margin-top: 10rpx;
  height: 60rpx;
  font-size: 32rpx;
  position: relative;
  display: flex;
  justify-content: center;
}
.usr_name_text {
  position: absolute;
  top: 60rpx;
}

.input_user_name {
  width: 100%;
  height: 120rpx;
  /* color: #486a00; */
  border: #ebebeb 1rpx solid;
  background-color: #ebebeb;
  border-radius: 20rpx;
}

.usr_sign {
  width: 80%;

}

.usr_avatar{
  width: 160rpx;
  height: 160rpx;
  margin-top: 30rpx;
  border-radius: 50%;
}

.des_title {
  color: #486a00;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.input_description {
  width: 100%;
  height: 30vh;
  margin-top: 10rpx;
  background-color: #ebebeb;
  border-radius: 20rpx;
  color: #486a00;
  padding-top: 10rpx;
}

.btn-group {
  height: 100rpx;
  width: 80%;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;

}
.btn-group image {
  width: 160rpx;
  height: 65rpx;
}